<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Comment"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#333333"
        android:fontFamily="@font/mirage_black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:text="Title"
        android:textStyle="bold"
        android:fontFamily="@font/mirage_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:hint="Enter Title"
        android:fontFamily="@font/mirage_medium"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTitle"
        android:text="Category"
        android:textStyle="bold"
        android:fontFamily="@font/mirage_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCategory"
        android:fontFamily="@font/mirage_medium"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:text="Body"
        android:fontFamily="@font/mirage_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/editBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_below="@+id/textBody"
        android:hint="Enter Body"
        android:fontFamily="@font/mirage_medium"
        android:inputType="textMultiLine"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBody"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/mirage_black"
            android:text="Cancel"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:fontFamily="@font/mirage_black"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</RelativeLayout>
