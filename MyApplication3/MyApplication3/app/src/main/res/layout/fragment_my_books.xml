<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BookSelectedFragment">

    <ImageView
        android:id="@+id/ovalImageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/oval_background"
        android:rotation="180"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mirage_black"
        android:text="My Books"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/searchview_bg"
        />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/buttonRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="All"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fiction"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Non-fiction"
                android:layout_toRightOf="@id/button1"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Literary genre"
                android:layout_toRightOf="@id/button2"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Adventures"
                android:layout_toRightOf="@id/button3"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mystery"
                android:layout_toRightOf="@id/button4"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Romance"
                android:layout_toRightOf="@id/button5"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Terror"
                android:layout_toRightOf="@id/button6"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Others"
                android:layout_toRightOf="@id/button7"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/mirage_black"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </HorizontalScrollView>








    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/horizontalScrollView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        />

</RelativeLayout>
