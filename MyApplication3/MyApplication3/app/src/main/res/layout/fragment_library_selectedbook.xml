<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/gradientCategory"
            android:layout_width="420dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/transparent"
                android:contentDescription="Back Button"
                android:src="@drawable/baseline_arrow_back_24" />
        </FrameLayout>

        <ImageView
            android:id="@+id/BookImage"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/BookImage"
            android:layout_marginTop="16dp"
            android:text="Title"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="@font/mirage_bold"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/AuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TitleTextView"
            android:layout_marginTop="8dp"
            android:text="Author"
            android:textSize="18dp"
            android:textColor="#666666"
            android:fontFamily="@font/mirage_bold"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/DescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AuthorTextView"
            android:layout_marginTop="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat..."
            android:textSize="16dp"
            android:textColor="#666666"
            android:fontFamily="@font/mirage_medium"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DescriptionText"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:background="#3498db"
            android:text="Add to my collection"
            android:textColor="#ffffff"
            android:fontFamily="@font/mirage_black"
            android:textSize="14sp" />

    </RelativeLayout>


</ScrollView>
